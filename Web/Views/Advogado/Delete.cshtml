@using Web.ViewModels;
@model AdvogadoViewModel

@{
    ViewBag.Title = "Excluir Advogado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Advogado</h2>

<h3>Você tem certeza que deseja excluir este advogado?</h3>

<div>
    <h4>@Model.Nome</h4>
    <h5>@Model.Senioridade.ToString()</h5>
    <h6>@Model.Endereco.Logradouro, @Model.Endereco.Numero - @Model.Endereco.Bairro</h6>
    <h6>@Model.Endereco.Estado - @Model.Endereco.Cep</h6>

    @using (Html.BeginForm("Delete", "Advogado", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Excluir</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/app/Endereco/_MascararEndereco.js"></script>
    <script src="~/Scripts/app/Endereco/_RestringirCamposEndereco.js"></script>
    <script src="~/Scripts/app/Endereco/_ValidarEndereco.js"></script>
    <script src="~/Scripts/app/Advogado/_ValidarAdvogado.js"></script>
}